@model BlogsViewModel

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/UILayout/Index.cshtml";
}
@if (!string.IsNullOrEmpty(Model.ErrorMessage))
{
    <div class="alert alert-danger">
        @Model.ErrorMessage
    </div>
}
else
{
    <section class="ftco-section">
        <div class="container">
            <div class="row d-flex justify-content-center">
                @foreach (var blog in Model.Blogs)
                {
                    <div class="col-md-12 text-center d-flex ftco-animate">
                        <div class="blog-entry justify-content-end mb-md-5">
                            <a href="blog-single.html" class="block-20 img" style="background-image: url(@blog.CoverImageUrl);">
                            </a>
                            <div class="text px-md-5 pt-4">
                                <div class="meta mb-3">
                                    <div><a href="#">@blog.CreatedDate.ToShortDateString()</a></div>
                                    <div><a href="#">@blog.AuthorName</a></div>
                                    <div><a href="#" class="meta-chat"><span class="icon-chat"></span> 3</a></div>
                                </div>
                                <h3 class="heading mt-2"><a href="#">@blog.Title</a></h3>
                                <p>@blog.Description</p>
                                <p><a href="/Blog/BlogDetail/@blog.BlogId" class="btn btn-primary">Devamını Oku.. <span class="icon-long-arrow-right"></span></a></p>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </section>
}

