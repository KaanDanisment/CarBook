@model BlogsViewModel

@if (!string.IsNullOrEmpty(Model.ErrorMessage))
{
    <div class="alert alert-danger">
        @Model.ErrorMessage
    </div>
}
else
{
    <div class="sidebar-box ftco-animate">
        <h3>Son Bloglar</h3>
        @foreach (var blog in Model.Blogs)
        {
            <div class="block-21 mb-4 d-flex">
                <a class="blog-img mr-4" style="background-image: url(@blog.CoverImageUrl);"></a>
                <div class="text">
                    <h3 class="heading"><a href="#">@blog.Title</a></h3>
                    <div class="meta">
                        <div><a href="#"><span class="icon-calendar"></span>@blog.CreatedDate.ToShortDateString()</a></div>
                        <div><a href="#"><span class="icon-person"></span> @blog.AuthorName</a></div>
                        <div><a href="#"><span class="icon-chat"></span> 19</a></div>
                    </div>
                </div>
            </div>
        }
    </div>
}
