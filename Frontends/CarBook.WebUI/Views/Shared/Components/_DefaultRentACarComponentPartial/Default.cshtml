@model RentalCarsViewModel

<section class="ftco-section ftco-no-pt bg-light">
    <div class="container">
        <div class="row no-gutters">
            <div class="col-md-12	featured-top">
                <div class="row no-gutters">
                    <div class="col-md-4 d-flex align-items-center">
                        <form asp-controller="Rental" asp-action="Index" method="post" class="request-form ftco-animate bg-primary" id="rental-form">
                            <h2>Aracınızı Kiralayın</h2>
                            <div class="form-group">
                                <label for="" class="label">Kiralanacak Lokasyon</label>
                                <input type="text" id="pickup-location" class="form-control" placeholder="City, Airport, Station, etc">
                                <input asp-for="RentalToCreate.PickupLocationId" type="hidden" id="pickup-location-id" />
                                <span asp-validation-for="RentalToCreate.PickupLocationId" class="text-dark" id="pickupError"></span>
                            </div>
                            <div class="form-group">
                                <label for="" class="label">Teslim Edilecek Lokasyon</label>
                                <input  type="text" id="dropoff-location" class="form-control" placeholder="City, Airport, Station, etc">
                                <input asp-for="RentalToCreate.DropoffLocationId" type="hidden" id="dropoff-location-id" />
                                <span asp-validation-for="RentalToCreate.DropoffLocationId" class="text-dark" id="dropoffError"></span>
                            </div>
                            <div class="d-flex">
                                <div class="form-group mr-2">
                                    <label for="" class="label">Kiralanacak Tarih</label>
                                    <input asp-for="RentalToCreate.RentDate" type="text" class="form-control" id="rent-date" placeholder="Date">
                                    <span asp-validation-for="RentalToCreate.RentDate" class="text-dark"></span>
                                </div>
                                <div class="form-group ml-2">
                                    <label for="" class="label">Teslim Edilecek Tarih</label>
                                    <input asp-for="RentalToCreate.ReturnDate" type="text" class="form-control" id="return-date" placeholder="Date">
                                    <span asp-validation-for="RentalToCreate.ReturnDate" class="text-dark"></span>
                                </div>
                            </div>
                            <div class="form-group">
                                <label for="" class="label">Alış Saati</label>
                                <input asp-for="RentalToCreate.RentTime" type="text" class="form-control" id="rent-time" placeholder="Time">
                                <span asp-validation-for="RentalToCreate.RentTime" class="text-dark"></span>
                            </div>
                            <div class="form-group">
                                <label for="" class="label">İade Saati</label>
                                <input asp-for="RentalToCreate.ReturnTime" type="text" class="form-control" id="return-time" placeholder="Time">
                                <span asp-validation-for="RentalToCreate.ReturnTime" class="text-dark"></span>
                            </div>
                            <div class="form-group">
                                <button type="submit" class="btn btn-secondary py-3 px-4">Uygun Araçları Listele</button>
                            </div>
                        </form>
                    </div>
                    <div class="col-md-8 d-flex align-items-center">
                        <div class="services-wrap rounded-right w-100">
                            <h3 class="heading-section mb-4">Araç Kiralamanın En İyi Yolu</h3>
                            <div class="row d-flex mb-4">
                                <div class="col-md-4 d-flex align-self-stretch ftco-animate">
                                    <div class="services w-100 text-center">
                                        <div class="icon d-flex align-items-center justify-content-center"><span class="flaticon-route"></span></div>
                                        <div class="text w-100">
                                            <h3 class="heading mb-2">Almak İstediğin Konumu Seç</h3>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-4 d-flex align-self-stretch ftco-animate">
                                    <div class="services w-100 text-center">
                                        <div class="icon d-flex align-items-center justify-content-center"><span class="flaticon-handshake"></span></div>
                                        <div class="text w-100">
                                            <h3 class="heading mb-2">En İyi Teklifleri Gör</h3>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-4 d-flex align-self-stretch ftco-animate">
                                    <div class="services w-100 text-center">
                                        <div class="icon d-flex align-items-center justify-content-center"><span class="flaticon-rent"></span></div>
                                        <div class="text w-100">
                                            <h3 class="heading mb-2">Kiralamayı Tamamla, Hepsi Bu</h3>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <p><a href="#" class="btn btn-primary py-3 px-4">Reserve Your Perfect Car</a></p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
</section>