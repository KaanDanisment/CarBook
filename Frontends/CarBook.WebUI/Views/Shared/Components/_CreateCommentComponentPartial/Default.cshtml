@model CreateCommentDto

<div class="comment-form-wrap pt-5">
    <h3 class="mb-5">Bir Yorum Bırak</h3>
    <form asp-action="CreateCommentByBlogId" method="post" class="p-5 bg-light">
        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
        <input asp-for="BlogId" type="hidden" value="@Model.BlogId" />
        <div class="form-group">
            <label for="name">Name *</label>
            <input asp-for="Name" type="text" class="form-control" id="name">
        </div>

        <div class="form-group">
            <label for="message">Yorum</label>
            <textarea asp-for="Description" id="message" cols="30" rows="10" class="form-control"></textarea>
        </div>

        <div class="form-group">
            <input type="submit" value="Yorum Yap" class="btn py-3 px-4 btn-primary">
        </div>

    </form>
</div>
