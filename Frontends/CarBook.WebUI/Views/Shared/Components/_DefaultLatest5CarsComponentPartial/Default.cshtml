@model CarViewModel

@if (!string.IsNullOrEmpty(Model.ErrorMessage))
{
    <div class="alert alert-danger">
        @Model.ErrorMessage
    </div>
}
else
{
    <section class="ftco-section ftco-no-pt bg-light">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-md-12 heading-section text-center ftco-animate mb-5">
                    <span class="subheading">Önerilerimiz</span>
                    <h2 class="mb-2">Son Eklenen Araçlar</h2>
                </div>
            </div>
            <div class="row">
                <div class="col-md-12">
                    <div class="carousel-car owl-carousel">
                        @foreach (var car in Model.Cars)
                        {
                            <div class="item">
                                <div class="car-wrap rounded ftco-animate">
                                    <div class="img rounded d-flex align-items-end" style="background-image: url(@car.CoverImageUrl);">
                                    </div>
                                    <div class="text">
                                        <h2 class="mb-0"><a href="#">@car.Model</a></h2>
                                        <div class="d-flex mb-3">
                                            <span class="cat">@car.BrandName</span>
                                            @foreach (var carPricing in car.CarPricings)
                                            {
                                                @if (carPricing.Pricing.PricingId == 3)
                                                {
                                                    <p class="price ml-auto">@carPricing.Amount₺<span>/Gün</span></p>
                                                }
                                            }

                                        </div>
                                        <p class="d-flex mb-0 d-block"><a href="#" class="btn btn-primary py-2 mr-1">Hemen Kirala</a> <a href="#" class="btn btn-secondary py-2 ml-1">Details</a></p>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </section>
}