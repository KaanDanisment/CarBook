@model CarViewModel

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/UILayout/Index.cshtml";
}
@if (!string.IsNullOrEmpty(Model.ErrorMessage))
{
    <div class="alert alert-danger" role="alert">
        @Model.ErrorMessage
    </div>
}
else
{
    <section class="ftco-section bg-light">
        <div class="container">
            <div class="row">
                @foreach (var car in Model.Cars)
                {
                    <div class="col-md-4">
                        <div class="car-wrap rounded ftco-animate">
                            <div class="img rounded d-flex align-items-end" style="background-image: url(@car.CoverImageUrl);">
                            </div>
                            <div class="text">
                                <h2 class="mb-0"><a href="car-single.html"> @car.Model</a></h2>
                                <div class="d-flex mb-3">
                                    <span class="cat">@car.BrandName</span>
                                    @foreach (var carPricing in car.CarPricings)
                                    {
                                        @if (carPricing.Pricing.PricingId == 3)
                                        {
                                            <p class="price ml-auto">@carPricing.Amount₺<span>/Gün</span></p>
                                        }
                                    }
                                </div>
                                <p class="d-flex mb-0 d-block"><a href="#" class="btn btn-primary py-2 mr-1">Hemen Kirala</a> <a href="car-single.html" class="btn btn-secondary py-2 ml-1">Detaylar</a></p>
                            </div>
                        </div>
                    </div>
                }
            </div>
            <div class="row mt-5">
                <div class="col text-center">
                    <div class="block-27">
                        <ul>
                            <li><a href="#">&lt;</a></li>
                            <li class="active"><span>1</span></li>
                            <li><a href="#">2</a></li>
                            <li><a href="#">3</a></li>
                            <li><a href="#">4</a></li>
                            <li><a href="#">5</a></li>
                            <li><a href="#">&gt;</a></li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </section>
}


