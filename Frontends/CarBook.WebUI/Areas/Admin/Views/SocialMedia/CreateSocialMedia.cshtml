@model CreateSocialMediaDto
@{
    ViewData["Title"] = "CreateSocialMedia";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="page-content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-xl-12">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Yeni Sosyal Medya hesabı Ekle</h4>
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <form asp-action="CreateSocialMedia" method="post">
                            <div class="form-group mb-3">
                                <label for="Name">Sosyal Medya Adı</label>
                                <input asp-for="Name" type="text" class="form-control" id="Name">
                            </div>
                            <div class="form-group mb-3">
                                <label for="Url">Sosyal Medya Linki</label>
                                <input asp-for="Url" type="text" class="form-control" id="Url">
                            </div>
                            <div class="form-group mb-3">
                                <label for="Icon">Sosyal Medya Ikonu</label>
                                <input asp-for="Icon" type="text" class="form-control" id="Icon">
                            </div>

                            <button type="submit" class="btn btn-primary waves-effect waves-light">Sosyal Medya Hesabını Kaydet</button>
                        </form>
                    </div> <!-- end card-body-->
                </div> <!-- end card-->
            </div>
            <!-- end col -->
        </div>
    </div>
</div>
