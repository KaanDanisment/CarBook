@model BannerViewModel
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
    int count = 0;
}

@if (!string.IsNullOrEmpty(Model.ErrorMessage))
{
    <div class="page-content">
        <div class="container-fluid">
            <div class="alert alert-danger" role="alert">
                @Model.ErrorMessage
            </div>
        </div>
    </div>
}
else
{
    <div class="page-content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-xl-12">
                    <div class="card">
                        <div class="card-body">
                            <h4 class="card-title">Banner Listesi</h4>
                            <div class="table-responsive">
                                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                <table class="table mb-0">
                                    <thead>
                                        <tr>
                                            <th>#</th>
                                            <th>Başlık</th>
                                            <th>Açıklama</th>
                                            <th>Video Açıklaması</th>
                                            <th>Viedo Url</th>
                                            <th>Sil</th>
                                            <th>Güncelle</th>
                                            <th>Youtube'da aç</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var banner in Model.Banners)
                                        {
                                            count++;
                                            <tr>
                                                <th scope="row">@count</th>
                                                <td>@banner.Title</td>
                                                <td>@banner.Description</td>
                                                <td>@banner.VideoDescription</td>
                                                <td>@banner.VideoUrl</td>
                                                <td><a href="/Admin/Banner/DeleteBanner/@banner.BannerId" class="btn btn-danger">Sil</a></td>
                                                <td><a href="/Admin/Banner/UpdateBanner/@banner.BannerId" class="btn btn-success">Güncelle</a></td>
                                                <td><a href="#" class="btn btn-dark">Youtube'de aç</a></td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                                <a href="/Admin/Banner/CreateBanner" class="btn btn-outline-primary">Yeni Banner Oluştur</a>
                            </div>

                        </div>
                        <!-- end card-body-->
                    </div>
                    <!-- end card -->

                </div>
                <!-- end col -->
            </div>
        </div>
    </div>
}

