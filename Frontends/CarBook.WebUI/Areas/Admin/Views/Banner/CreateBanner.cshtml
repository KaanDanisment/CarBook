@model CreateBannerDto
@{
    ViewData["Title"] = "CreateBanner";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}


<div class="page-content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-xl-12">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Yeni Özellik Oluştur</h4>
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <form asp-action="CreateBanner" method="post">
                            <div class="form-group mb-3">
                                <label for="Title">Banner Başlığı</label>
                                <input asp-for="Title" type="text" class="form-control" id="Title" placeholder="BAnner başlığı girin">
                            </div>
                            <div class="form-group mb-3">
                                <label for="Description">Açıklama</label>
                                <input asp-for="Description" type="text" class="form-control" id="Description" placeholder="Açıklama girin">
                            </div>
                            <div class="form-group mb-3">
                                <label for="VideoDescription">Video Açıklaması</label>
                                <input asp-for="VideoDescription" type="text" class="form-control" id="VideoDescription" placeholder="Video açıklması girin">
                            </div>
                            <div class="form-group mb-3">
                                <label for="VideoUrl">Vide Url</label>
                                <input asp-for="VideoUrl" type="text" class="form-control" id="VideoUrl" placeholder="Video url girin">
                            </div>
                            <button type="submit" class="btn btn-primary waves-effect waves-light">Aracı Kaydet</button>
                        </form>
                    </div> <!-- end card-body-->
                </div> <!-- end card-->
            </div>
            <!-- end col -->
        </div>
    </div>
</div>


